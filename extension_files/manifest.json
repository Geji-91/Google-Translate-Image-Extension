{
    "name": "Google Translate Image Extension",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "contextMenus", 
        "clipboardWrite",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["*://*/*"],
    "icons": {
        "16": "Google_Translate_logo.png"
    }
}
